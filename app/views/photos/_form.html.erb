<%= form_for [@album, @photo], :html => { :multipart => true } do |f| %>
<div class="form">
	<div class="caption"><%= f.label :title, "Titel" %><font class="point">*</font></div>
	<%= f.text_field :title, :class => "text_field" %>
	<div class="caption"><%= f.label :image, "Bild" %><font class="point">*</font></div>
	<%= f.file_field :image, :class => "file_field" %>
	<div id="not_null"> 
		<span>Mit <font class="point">*</font> gekennzeichnete Felder sind Pflichtangaben</span>
	</div> 
</div>
<% if @photo.errors.any? %>
<div id="error"> 
	<span>
		<% @photo.errors.full_messages.each do |msg| %>
        <%= msg %><br>
      	<% end %>
	</span>
</div> 
<% end %>
<% end %>












